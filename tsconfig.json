{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "allowJs": false,
        "typeRoots": ["./typings", "./node_modules/@types"],
        "lib": [
            "es2018"
        ],
        "outDir": "dist"
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}